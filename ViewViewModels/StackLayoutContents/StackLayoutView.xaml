<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMobileApp.ViewViewModels.StackLayoutContents.StackLayoutView"
             Title="StackLayoutView">

    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="10" />
        </Style>
    </ContentPage.Resources>

    <VerticalStackLayout>
        <Grid Margin="25, 35, 20, 20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Text="{Binding StackLayoutButtonTitle}" 
                    Command="{Binding OnLayoutsClicked}" />
            <Button Grid.Row="1"
                    Grid.Column="0"
                    Text="Vertical Stack" />
            <Button Grid.Row="1"
                    Grid.Column="1"
                    Text="Horizontal Stack" />
            <Button Grid.Row="1"
                    Grid.Column="2"
                    Grid.ColumnSpan="0"
                    Text="Absolute Layout" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>
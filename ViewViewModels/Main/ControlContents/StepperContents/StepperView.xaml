<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMobileApp.ViewViewModels.Main.ControlContents.StepperContents.StepperView"
             Title="{Binding Title}">

    <StackLayout Margin="20">

        <Label x:Name="RotatingLabel"
               Text="   ROTATING TEXT!   "
               FontSize="Large"
               FontAttributes="Bold"
               TextColor="Chartreuse"
               BackgroundColor="Violet"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand" />

        <Image x:Name="RotatingImage"
               Source="Images/michael.png"
               HorizontalOptions="Center"
               VerticalOptions="StartAndExpand"
               Scale=".7" />

        <Stepper x:Name="stepper"
                 Maximum="360"
                 Increment="10"
                 BackgroundColor="Black"
                 HorizontalOptions="Center"
                 ValueChanged="OnStepperValueChanged" />


        <Label x:Name="DisplayLabel"
               FontSize="Large"
               FontAttributes="Bold"
               TextColor="Crimson"
               Text="{Binding Source={x:Reference stepper}, Path=Value, StringFormat='The Stepper value is {0:F0}'}"
               HorizontalOptions="Center" />

    </StackLayout>

</ContentPage>